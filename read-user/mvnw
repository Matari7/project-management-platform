MAVEN_VERSION="3.8.1"
MAVEN_DIR="$(cd -P -- "$(dirname -- "$0")" && pwd -P)"
MAVEN_PROJECT_BASEDIR="${MAVEN_DIR}/../"
MVNW_REPO="https://repo.maven.apache.org/maven2"
MAVEN_WRAPPER_JAR="${MAVEN_DIR}/.mvn/wrapper/maven-wrapper.jar"
MAVEN_WRAPPER_PROPERTIES="${MAVEN_DIR}/.mvn/wrapper/maven-wrapper.properties"

# Ensure Maven Wrapper jar is available
if [ ! -f "$MAVEN_WRAPPER_JAR" ]; then
  echo "Downloading Maven Wrapper..."
  mkdir -p "$(dirname "$MAVEN_WRAPPER_JAR")"
  curl -sSLo "$MAVEN_WRAPPER_JAR" "$MVNW_REPO/org/apache/maven/wrapper/maven-wrapper/3.8.1/maven-wrapper-3.8.1.jar"
fi

# Execute Maven
java -jar "$MAVEN_WRAPPER_JAR" "$@"
